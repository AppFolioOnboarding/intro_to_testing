<div class="section">
  <%= form_for(employee) do |f| %>
    <div class="field">
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name, class: 'input' %>

      <% if employee.errors[:name].present? %>
        <p class="help is-danger"><%= employee.errors.full_messages_for(:name).join('') %></p>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :age, class: 'label' %>
      <%= f.number_field :age, class: 'input' %>

      <% if employee.errors[:age].present? %>
        <p class="help is-danger" id="age-error"><%= employee.errors.full_messages_for(:age).join('') %></p>
      <% end %>
    </div>

    <div class="field">
      <p class="control">
        <%= f.submit 'Submit', class: 'button is-success' %>
        <% cancel_path = employee.id.present? ? employee_path(employee) : employees_path %>
        <%= link_to 'Cancel', cancel_path, class: 'button' %>
      </p>
    </div>
  <% end %>
</div>
